cd $(dirname $0)

curl -sL https://github.com/btwiuse/vscodium/releases/download/1.96.4.25033/vscodium-reh-linux-x64-1.96.4.25033.tar.gz | tar xz

[[ -n $RAILWAY_ENVIRONMENT ]] && {
  ufo upgrade
  ufo term &
  env RELAY=:$PORT ufo pub :1$PORT &
  ./bin/codium-server --host 0.0.0.0 --port 1$PORT --without-connection-token
} || {
  true
}
